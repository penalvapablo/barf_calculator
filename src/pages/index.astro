---
import Layout from "../layouts/Layout.astro";
import CalculatorForm from "../components/Calculator/CalculatorForm";
import Barf from "../components/Barf/BarfSection.astro";
import Nutritionist from "../components/Nutritionist/NutritionistSection.astro";
import Footer from "../components/Footer/Footer.astro";

import "@fontsource/della-respira";
import "@fontsource-variable/raleway";
---

<Layout title="Calculadora BARF.">
  <nav>
    <ul class="flex gap-9 mb-8 w-fit mx-auto flex-wrap justify-center">
      <li>
        <a
          href="#barf"
          class="rounded-2xl bg-two px-5 py-2 font-text text-lg text-one font-medium"
          >¿Qué es BARF?</a
        >
      </li>
      <li>
        <a
          href="#nutritionist"
          class="rounded-2xl bg-two px-5 py-2 font-text text-lg text-one font-medium"
          >Nutricionista</a
        >
      </li>
    </ul>
  </nav>
  <CalculatorForm client:load />
  <Barf />
  <Nutritionist />
  <Footer />
</Layout>

